{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "parserPreset": "conventional-changelog-atom",
    "rules": {
        "header-max-length": [
            2,
            "always",
            100
        ],
        "type-case": [
            1,
            "always",
            [
                "lower-case",
                "upper-case"
            ]
        ],
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "perf",
                "test",
                "chore",
                "revert",
                "WIP"
            ]
        ]
    }
}
